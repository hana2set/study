linux

chmod 400 newkeypair.pem
ssh -i newkeypair.pem

window 

icacls.exe newkeypair.pem /reset
icacls.exe newkeypair.pem /grant:r %username%:(R)
icacls.exe newkeypair.pem /inheritance:r


